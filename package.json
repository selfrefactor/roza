{
  "name": "roza",
  "version": "0.0.1",
  "description": "Utility library",
  "main": "dist/commonjs/index.js",
  "module": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/selfrefactor/roza.git"
  },
  "author": "Dejan Toteff",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/selfrefactor/roza/issues"
  },
  "homepage": "https://github.com/selfrefactor/roza#readme",
  "devDependencies": {
    "@types/jest": "26.0.14",
    "jest": "26.4.2",
    "ts-jest": "26.4.1",
    "ts-node": "8.4.1",
    "typescript": "4.7.2"
  },
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "test": "jest --coverage && yarn run compile",
    "test:ci": "jest",
    "compile": "tsc -p ./tsconfig.json --noEmit",
    "out": "yarn run clean && yarn run build:es && yarn run build:cjs",
    "build:es": "yarn run tsc --declaration true --declarationMap true --module esnext --outDir ./dist/es",
    "build:cjs": "yarn run tsc --declaration true --declarationMap true --module commonjs --outDir ./dist/commonjs"
  },
  "keywords": [
    "utils",
    "fp",
    "functional",
    "programming",
    "typescript"
  ],
  "files": [
    "dist/*"
  ],
  "jest": {
    "transform": {
      ".+\\.ts$": "ts-jest"
    },
    "testRegex": "/src/.*.spec.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
